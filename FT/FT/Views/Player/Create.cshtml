@model FT.Models.player

@{
    ViewBag.Title = "Create";
}

<!-- ***************** - START Title Bar - ***************** -->
<div class="tools">
    <div class="holder">
        <div class="frame">
            <h1>Create Player</h1>

            <form method="get" id="searchform" action="#" class="search-form">
            <fieldset>
            <span class="text">
             <input type="submit" class="submit" value="search" id="searchsubmit" />
             <input type="text" name="s" id="s" value="Search" onfocus="this.value=(this.value=='Search') ? '' : this.value;" onblur="this.value=(this.value=='') ? 'Search' : this.value;" />
            </span>
            </fieldset>
            </form>


            <p class="breadcrumb">@Html.ActionLink("Home", "Index", "Home")@Html.ActionLink("Players", "Index", "Player")<span class='current_crumb'>Create Player</span></p>
        </div><!-- end frame -->
    </div><!-- end holder -->
</div><!-- end tools -->
<!-- ***************** - END Title Bar - ***************** -->
