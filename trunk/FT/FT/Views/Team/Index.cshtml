@model IEnumerable<FT.Models.team>

@{
    ViewBag.Title = "Teams";
    ViewBag.Subtitle = "Index";
}

<table cellpadding="0" cellspacing="0" border="0" class="stdtable stdtablecb" id="dyntable">
    <div class="tableoptions">
        @Html.ActionLink("New", "Create", "Team", null, new { @class = "ka-form-submit tablebtn" })
    </div>
    <thead>
        <tr>
            <th class="head0">
                <div class="DataTables_sort_wrapper">Name<span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-n"></span></div>
            </th>
            <th class="head1">
                <div class="DataTables_sort_wrapper">Player 1<span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-n"></span></div>
            </th>
            <th class="head0">
                <div class="DataTables_sort_wrapper">Player 2<span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-n"></span></div>
            </th>
            <th class="head1" style="width:150px">
                <div class="DataTables_sort_wrapper">Actions<span class="DataTables_sort_icon css_right ui-icon ui-icon-triangle-1-n"></span></div>
            </th>
        </tr>
    </thead>

    <tbody>

    @{
        foreach (var item in Model) {
            @:<tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Team", new { @teamId=item.Id }, null);
                </td>
                    foreach (var tp in item.team_player)
                    {
                        <td>
                        @Html.Label(tp.player.Name)
                        </td>
                    }
                    for (int i = item.team_player.Count; i<2 ; i++)
                    {
                        <td></td>   
                    }
                <td>
                    @Html.ActionLink("Delete", "Delete", "Team", new { teamId = item.Id }, null)
                </td>
            @:</tr>
        }
    }
    </tbody>
</table>
<div class="button-wrapper submit-button-wrapper clearfix">
    <div class="button-input-wrapper submit-button-input-wrapper">
        @Html.ActionLink("Back", "Index", "Home", null, new { @class = "ka-form-submit" })
    </div>
</div>